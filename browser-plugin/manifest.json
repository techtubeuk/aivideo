{
  "manifest_version": 3,
  "name": "AI Video Analyzer",
  "version": "1.0",
  "description": "Analyze video content using AI directly from your browser.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
